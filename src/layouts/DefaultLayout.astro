---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
const {pageTitle} = Astro.props;
import logoBlue from "../images/UysDesignLogoBlue.png";
---

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uys Design</title>
    <meta name="description" content="We build websites for businesses. Good looking, lightning fast and SEO friendly.">
    <link rel="icon" href={logoBlue.src} type="image/x-icon">
</head>
<body>
    <Navbar/>
    {pageTitle && <h1 class="text-center text-7xl mt-5 mb-10 font-light">{pageTitle}</h1>}
    <slot/>
    <Footer/>
</body>
</html>