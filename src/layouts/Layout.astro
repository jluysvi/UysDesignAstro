---
import Navbar from "../components/Navbar.astro"
import Footer from "../components/Footer.astro"
import { getImage } from "astro:assets";
import logo from "../images/UysDesignLogoBlue.png";
import MetaPixel from "../components/MetaPixel.astro";

interface Props {
    metaDescription?: string;
}

const { metaDescription = "Professional web development and design services by Uys Design. Creating modern, responsive websites with cutting-edge technology." } = Astro.props;

const optimizedIcon = await getImage({
    src: logo,
    width: 32,
    height: 32,
    format: 'png',
});
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Uys Design</title>
        <meta name="description" content={metaDescription} />
        <link rel="icon" type="image/png" href={optimizedIcon.src} />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <MetaPixel />
    </head>
    <body class="bg-gray-900">
        <Navbar />
        <slot />
        <Footer />
    </body>
</html>
