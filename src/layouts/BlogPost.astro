---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout>
    <article class="relative min-h-screen">
        <div class="fixed inset-0 bg-gray-900 -z-10"></div>
        
        <div class="relative z-10 max-w-4xl mx-auto px-4 py-20">
            {frontmatter.image && (
                <div class="w-full h-[400px] rounded-lg overflow-hidden mb-8">
                    <img 
                        src={frontmatter.image} 
                        alt={frontmatter.title}
                        class="w-full h-full object-cover"
                    />
                </div>
            )}
            
            <div class="prose prose-lg prose-invert mx-auto">
                <p class="text-blue-400">{frontmatter.date}</p>
                <slot />
            </div>
            
            <div class="mt-16 text-center">
                <a 
                    href="/blog" 
                    class="inline-flex items-center text-blue-400 hover:text-blue-300"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                    Back to Blog
                </a>
            </div>
        </div>
    </article>
</Layout>
