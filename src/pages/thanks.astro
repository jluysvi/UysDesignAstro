---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import backgroundColour from "../images/bg.webp";
---

<Layout>
    <section class="relative min-h-screen">
        <Image
            src={backgroundColour}
            alt="Background color"
            class="fixed inset-0 w-full h-full object-cover -z-10"
        />
        <div class="absolute inset-0 bg-black opacity-50 -z-10"></div>

        <div class="text-center max-w-2xl mx-auto pt-32">
            <h1 class="text-4xl md:text-5xl text-white font-bold mb-6">
                Thank You!
            </h1>
            <p class="text-xl text-gray-300 mb-8">
                We've received your message and will get back to you shortly.
            </p>
            <a
                href="/"
                class="inline-block bg-blue-600 text-white px-8 py-3 rounded-md hover:bg-blue-700 transition duration-300"
            >
                Back to Home
            </a>
        </div>
    </section>
</Layout>
