---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import backgroundColour from "../images/bg.webp";
---

<Layout>
    <section class="relative min-h-screen">
        <Image
            src={backgroundColour}
            alt="Background color"
            class="fixed inset-0 w-full h-full object-cover -z-10"
        />
        <div class="absolute inset-0 bg-black opacity-50
         -z-10"></div>
        
        <div class="relative z-10 max-w-6xl mx-auto px-4 py-20">
            <div class="text-center mb-16">
                <h1 class="text-4xl md:text-5xl text-white font-bold mb-6">Let's Work Together</h1>
                <p class="text-xl text-gray-300 max-w-2xl mx-auto">
                    Ready to transform your online presence? Get in touch with us today for a free consultation about your project.
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-12 max-w-4xl mx-auto">
                <!-- Contact Information -->
                <div class="space-y-8">
                    <h2 class="text-2xl text-white font-bold mb-6">Get In Touch</h2>
                    
                    <!-- Phone -->
                    <div class="flex items-start">
                        <div class="bg-blue-600/20 p-3 rounded-lg mr-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-white font-bold mb-1">Phone</h3>
                            <a href="tel:+27686021572" class="text-gray-300 hover:text-blue-400 transition-colors">+27 68 602 1572</a>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="flex items-start">
                        <div class="bg-blue-600/20 p-3 rounded-lg mr-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-white font-bold mb-1">Email</h3>
                            <a href="mailto:cobus@uysdesign.co.za" class="text-gray-300 hover:text-blue-400 transition-colors">cobus@uysdesign.co.za</a>
                        </div>
                    </div>

                    <!-- Hours -->
                    <div class="flex items-start">
                        <div class="bg-blue-600/20 p-3 rounded-lg mr-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-white font-bold mb-1">Business Hours</h3>
                            <p class="text-gray-300">Monday - Friday: 8:00 AM - 6:00 PM</p>
                            <p class="text-gray-300">Weekend support available for urgent matters</p>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-lg">
                    <h2 class="text-2xl text-white font-bold mb-6">Send Us a Message</h2>
                    <form class="space-y-6" name="contact" method="POST" data-netlify="true" netlify>
                        <div>
                            <label for="name" class="block text-gray-300 mb-2">Name</label>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                required
                                class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:border-blue-500"
                            />
                        </div>
                        <div>
                            <label for="email" class="block text-gray-300 mb-2">Email</label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                required
                                class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:border-blue-500"
                            />
                        </div>
                        <div>
                            <label for="message" class="block text-gray-300 mb-2">Message</label>
                            <textarea 
                                id="message" 
                                name="message" 
                                rows="4" 
                                required
                                class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:outline-none focus:border-blue-500"
                            ></textarea>
                        </div>
                        <button 
                            type="submit"
                            class="w-full bg-blue-600 text-white py-3 px-6 rounded-md hover:bg-blue-700 transition-colors duration-300 font-bold"
                        >
                            Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</Layout>
