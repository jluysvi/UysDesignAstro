---
import { Image } from "astro:assets";
import logoLight from "../images/UysDesignLogoLight.png";
---

<footer class="bg-gray-900 text-gray-300 border-t border-gray-800">
    <div class="max-w-6xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Logo and Description -->
            <div class="col-span-1 md:col-span-2">
                <Image
                    src={logoLight}
                    alt="Uys Design Logo"
                    class="h-12 w-auto mb-4"
                />
                <p class="text-sm mt-4">
                    Professional web development and design services, creating
                    modern, responsive websites with cutting-edge technology.
                </p>
            </div>

            <!-- Quick Links -->
            <div>
                <h3 class="text-white font-semibold mb-4">Quick Links</h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="/"
                            class="hover:text-blue-400 transition-colors"
                            >Home</a>
                    </li>
                    <li>
                        <a
                            href="/services"
                            class="hover:text-blue-400 transition-colors"
                            >Services</a>
                    </li>
                    <li>
                        <a
                            href="/blog"
                            class="hover:text-blue-400 transition-colors"
                            >Blog</a>
                    </li>
                    <li>
                        <a
                            href="/contact"
                            class="hover:text-blue-400 transition-colors"
                            >Contact</a>
                    </li>
                </ul>
            </div>

            <!-- Contact Info -->
            <div>
                <h3 class="text-white font-semibold mb-4">Contact</h3>
                <ul class="space-y-2">
                    <li>
                        <a
                            href="tel:+27686021572"
                            class="hover:text-blue-400 transition-colors"
                        >
                            +27 68 602 1572
                        </a>
                    </li>
                    <li>
                        <a
                            href="mailto:info@uysdesign.com"
                            class="hover:text-blue-400 transition-colors"
                        >
                            cobus@uysdesign.com
                        </a>
                    </li>
                    <li class="flex space-x-4 mt-16">
                        <a
                            href="https://x.com/cobusuys_"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="hover:text-blue-400 transition-colors"
                            aria-label="X(Twitter)"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                aria-hidden="true"
                            >
                                <path
                                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                                ></path>
                            </svg>
                        </a>
                        <a
                            href="https://www.linkedin.com/in/cobusuys/"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="hover:text-blue-400 transition-colors"
                            aria-label="LinkedIn"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                aria-hidden="true"
                            >
                                <path
                                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                                ></path>
                            </svg>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-sm">
            <p>
                &copy; {new Date().getFullYear()} Uys Design. All rights reserved.
            </p>
        </div>
    </div>
</footer>
